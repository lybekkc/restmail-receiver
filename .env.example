# Restmail Receiver Environment Variables
# Copy this file to .env and adjust values as needed

# Network Configuration
RESTMAIL_POLICY_PORT=12345
RESTMAIL_DELIVERY_PORT=2525
RESTMAIL_LISTEN_ADDRESS=0.0.0.0

# Storage Configuration
# For local development (no sudo required):
RESTMAIL_STORAGE_BASE_PATH=./dev-storage
RESTMAIL_STORAGE_INCOMING=incoming

# For production (requires sudo/proper permissions):
# RESTMAIL_STORAGE_BASE_PATH=/var/mail/restmail
# RESTMAIL_STORAGE_INCOMING=incoming

# Logging Configuration
# For local development (no sudo required):
RESTMAIL_LOG_DIR=./dev-logs

# For production (requires sudo/proper permissions):
# RESTMAIL_LOG_DIR=/var/log/restmail-receiver

# REST API Configuration (required for M2M communication)
REST_API_URL=http://localhost:8080
REST_API_SERVICE_KEY=srv_postfix_your_service_key_here
REST_API_SECRET_KEY=your_secret_key_here

# Log level (optional)
RUST_LOG=info

# Force stdout-only logging (optional - useful for development):
# RESTMAIL_LOG_MODE=stdout

# Optional: Override config file path (if not using env vars for all settings)
# RESTMAIL_CONFIG_PATH=/etc/restmail-receiver/config.toml

