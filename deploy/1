apiVersion: apps/v1
kind: Deployment
metadata:
  name: restmail-receiver
spec:
  replicas: 1
  selector:
    matchLabels:
      app: restmail-receiver
  template:
    metadata:
      labels:
        app: restmail-receiver
    spec:
      containers:
      - name: receiver
        image: restmail-receiver:latest
        imagePullPolicy: Never # Viktig når vi bruker lokalt register
        ports:
        - containerPort: 2525
---
apiVersion: v1
kind: Service
metadata:
  name: restmail-service
spec:
  type: NodePort
  selector:
    app: restmail-receiver
  ports:
    - protocol: TCP
      port: 2525
      targetPort: 2525
      nodePort: 30025 # Denne må matche Postfix transport-filen
